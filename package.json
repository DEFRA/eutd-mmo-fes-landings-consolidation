{
    "name": "mmo-fes-landings-consolidation",
    "version": "1.0.0",
    "description": "",
    "private": true,
    "engines": {
        "node": "~22.13.1",
        "npm": "~10.9.2"
    },
    "nyc": {
        "extension": [
            ".ts",
            ".tsx"
        ],
        "exclude": [
            "config.ts",
            "**/*.js",
            "**/*.d.ts",
            "dist",
            "mock_data",
            "coverage",
            "test",
            "src/start.ts"
        ],
        "reporter": [
            "html"
        ],
        "all": true,
        "check-coverage": true
    },
    "scripts": {
        "test": "cross-env JEST_JUNIT_OUTPUT_DIR=test-results JEST_JUNIT_OUTPUT_NAME=test-results.xml NODE_ENV=test jest test/ --coverage --ci",
        "test:ci": "cross-env JEST_JUNIT_OUTPUT_DIR=test-results JEST_JUNIT_OUTPUT_NAME=junit.xml NODE_ENV=test jest --runInBand --watchAll=false --reporters=default --reporters=jest-junit --coverage --ci",
        "test:watch": "cross-env JEST_JUNIT_OUTPUT_DIR=test-results JEST_JUNIT_OUTPUT_NAME=test-results.xml NODE_ENV=test jest --runInBand test/ --coverage --ci --watch",
        "start": "cross-env NODE_ENV=development nodemon -w src/ -x ts-node src/start.ts",
        "start-debug": "node --inspect ./dist/start.js",
        "build": "tsc",
        "debug": "cross-env NODE_ENV=development npm-run-all build start-debug --print-label",
        "lint": "eslint . --ext .ts"
    },
    "devDependencies": {
        "@types/bunyan": "1.8.8",
        "@types/hapi": "^18.0.14",
        "@types/jest": "^29.5.7",
        "@types/node": "20.5.7",
        "@typescript-eslint/eslint-plugin": "^6.18.1",
        "@typescript-eslint/parser": "^6.18.1",
        "babel-jest": "^29.7.0",
        "cross-env": "7.0.3",
        "eslint": "^8.48.0",
        "eslint-config-airbnb": "19.0.4",
        "eslint-plugin-jest": "27.2.3",
        "eslint-plugin-prettier": "5.0.0",
        "husky": "^8.0.3",
        "jest": "^29.7.0",
        "jest-junit": "16.0.0",
        "mongodb-memory-server": "9.0.1",
        "nodemon": "^3.0.1",
        "npm-run-all": "4.1.5",
        "prettier": "3.0.3",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.2",
        "typescript": "5.3.3"
    },
    "dependencies": {
        "@azure/storage-blob": "^12.23.0",
        "@hapi/basic": "^7.0.2",
        "@hapi/hapi": "^21.3.2",
        "applicationinsights": "2.9.5",
        "applicationinsights-native-metrics": "0.0.10",
        "axios": "^1.7.2",
        "bunyan": "^1.8.15",
        "cross-env": "7.0.3",
        "csvtojson": "^2.0.10",
        "dotenv": "^16.3.1",
        "joi": "^17.10.0",
        "lodash": "^4.17.21",
        "mingo": "^6.4.10",
        "mmo-shared-reference-data": "1.2.8",
        "mongodb": "6.0.0",
        "mongoose": "^8.0.0",
        "node-cron": "^3.0.2",
        "uuid": "^9.0.1"
    },
    "jest": {
        "moduleNameMapper": {
            "^axios/": "axios/dist/node/axios.cjs"
        },
        "testEnvironment": "node",
        "transform": {
            "^.+\\.js$": "babel-jest",
            "^.+\\.ts?$": "ts-jest"
        },
        "moduleFileExtensions": [
            "tsx",
            "ts",
            "js",
            "json"
        ],
        "testRegex": "/test/.*\\.(tsx|ts|js)$",
        "testPathIgnorePatterns": [
            "/test/mockData.js"
        ],
        "coverageReporters": [
            "clover",
            "json",
            "lcov",
            "text",
            "cobertura"
        ],
        "coverageThreshold": {
            "global": {
                "statements": 100,
                "branches": 100,
                "functions": 100,
                "lines": 100
            }
        }
    },
    "prettier": {
        "singleQuote": true
    },
    "author": "",
    "license": "ISC"
}
